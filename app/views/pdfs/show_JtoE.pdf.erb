<p class ="problem-state">次の日本語を英語に直しましょう</p>

<div class="container">
<ul>
  
  <% i=1 %>
  <% @words.each do |word| %>
  <div class="content-wrapper">
    <li>
      
    <div class="number">
      <%= "(#{i})" %>
    </div>
      
   <div class="problem"> 
      <%= word.meaning %>
    </div>
    
    <div class="answer">
      __________________
    </div>
    
    <br>
    
    </li>
    </div>
    <% i+=1 %>
  <% end %>
</ul>
</div>